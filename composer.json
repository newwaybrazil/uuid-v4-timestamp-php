{
  "name": "newwaybrazil/uuid-v4-timestamp-php",
  "description": "PHP library to generate UUID V4 timestamp",
  "version": "1.0.0",
  "type": "library",
  "license": "GPL-3.0-only",
  "require": {
    "php": "^7.1",
    "ramsey/uuid": "^3.8",
    "moontoast/math": "^1.1"
  },
  "require-dev": {
    "phpunit/phpunit": "7.5.0",
    "mockery/mockery": "~1.2.0",
    "squizlabs/php_codesniffer": "3.2"
  },
  "authors": [
    {
      "name": "New Way Brazil",
      "email": "contanto@gruponewway.com.br"
    }
  ],
  "autoload": {
    "psr-4": {
      "Uuid\\": "src/"
    }
  },
  "scripts": {
      "post-install-cmd": [
          "bash contrib/setup.sh"
      ],
      "check" : [
          "@lint",
          "@cs",
          "@test"
      ],
      "lint" : [
          "find ./src -name '*.php' -print0 | xargs -0 -n1 -P8 php -l -d display_errors=0"
      ],
      "cs" : "vendor/bin/phpcs",
      "test" : "vendor/bin/phpunit",
      "test-xml" : "vendor/bin/phpunit --coverage-html coverage --coverage-clover coverage/coverage.xml --log-junit coverage/junit.xml"
  }
}
